@{
    var odevler = ViewBag.TamamlananOdevler as List<EtutTakipSistemi.Models.OgrenciDeneme>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
    }
    .sidebar {
        min-height: 100vh;
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
        color: #fff;
        padding: 32px 18px 18px 18px;
        width: 220px;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        box-shadow: 2px 0 16px rgba(24,90,157,0.08);
    }
    .sidebar .nav-link {
        color: #fff;
        font-weight: 500;
        margin-bottom: 10px;
        border-radius: 8px;
        transition: background 0.2s, color 0.2s;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
        background: #43cea2;
        color: #185a9d;
    }
    .sidebar h4 {
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 2.5rem;
    }
    .main-content {
        margin-left: 240px;
        padding: 32px 24px;
        background: transparent;
        min-height: 100vh;
    }
    @@media (max-width: 991px) {
        .sidebar {
            position: static;
            width: 100%;
            min-height: auto;
            box-shadow: none;
        }
        .main-content {
            margin-left: 0;
            padding: 16px 5px;
        }
    }
    .table thead th {
        background: #0d6efd;
        color: #fff;
        font-weight: 600;
        text-align: center;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        font-size: 1.1rem;
        padding: 18px 18px;
        letter-spacing: 0.5px;
    }
    .table tbody tr:hover {
        background: #e7f1ff;
        transition: background 0.2s;
    }
    .table td, .table th {
        vertical-align: middle;
        text-align: center;
        padding: 16px 18px;
        font-size: 1.05rem;
        min-width: 110px;
    }
    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0,0,0,0.07);
        margin-bottom: 2rem;
    }
</style>

<div class="sidebar d-flex flex-column">
    <h4 class="text-center mb-4">Etüt Takip</h4>
    <nav class="nav flex-column">
        <a class="nav-link" href="/Kullanici/Profil"><i class="bi bi-person-circle me-2"></i>Profilim</a>
        <a class="nav-link" href="/Dashboard/Index">Ana Sayfa</a>
        <a class="nav-link" href="/ProgramEtut/Index">Program & Etüt</a>
        <a class="nav-link active" href="/Odev/Index">Tamamlanan Ödevler</a>
        <a class="nav-link" href="/Test/Index">Test Çöz</a>
        <a class="nav-link" href="/TestSonuc/Index">Online Test Sonuçları</a>
        <a class="nav-link" href="/CanliDers/Index">Canlı Ders</a>
        <a class="nav-link" href="/Destek/Index">Destek Talebi</a>
    </nav>
</div>

<div class="main-content">
    <h2 class="mb-4">Tamamlanan Ödevler</h2>
    @if (odevler != null && odevler.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Türkçe Doğru</th>
                        <th>Türkçe Yanlış</th>
                        <th>Matematik Doğru</th>
                        <th>Matematik Yanlış</th>
                        <th>Sosyal Doğru</th>
                        <th>Sosyal Yanlış</th>
                        <th>Fen Doğru</th>
                        <th>Fen Yanlış</th>
                        <th>Puan</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var odev in odevler)
                {
                    <tr>
                        <td>@odev.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@odev.TurkceD</td>
                        <td>@odev.TurkceY</td>
                        <td>@odev.MatD</td>
                        <td>@odev.MatY</td>
                        <td>@odev.SosD</td>
                        <td>@odev.SosY</td>
                        <td>@odev.FenD</td>
                        <td>@odev.FenY</td>
                        <td>@odev.TytPuan</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Tamamlanan ödev bulunamadı.</div>
    }
</div>