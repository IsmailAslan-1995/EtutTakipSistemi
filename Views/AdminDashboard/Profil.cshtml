@model EtutTakipSistemi.Models.AdminTablosu

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
        min-height: 100vh;
    }
    .profile-card {
        max-width: 480px;
        margin: 48px auto;
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        overflow: hidden;
        background: #fff;
        border: none;
    }
    .profile-header {
        background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
        color: #fff;
        text-align: center;
        padding: 2rem 1rem 1.2rem 1rem;
        border-radius: 18px 18px 0 0;
        font-size: 1.7rem;
        font-weight: 700;
        letter-spacing: 1px;
        box-shadow: 0 2px 12px rgba(67, 206, 162, 0.08);
    }
    .profile-avatar {
        width: 96px;
        height: 96px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #43cea2;
        margin-top: -48px;
        background: #fff;
        box-shadow: 0 2px 12px rgba(67, 206, 162, 0.08);
    }
    .profile-info dt {
        color: #185a9d;
        font-weight: 600;
        font-size: 1.05rem;
    }
    .profile-info dd {
        color: #222f3e;
        font-size: 1.05rem;
        margin-bottom: 1rem;
    }
    .sidebar {
    min-height: 100vh;
    background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
    color: #fff;
    padding: 32px 18px 18px 18px;
    width: 220px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    box-shadow: 2px 0 16px rgba(24,90,157,0.08);
}

.sidebar .nav-link {
    color: #fff;
    font-weight: 500;
}

.sidebar .nav-link.active, .sidebar .nav-link:hover {
    background: #43cea2;
    color: #185a9d;
}

.sidebar h4 {
    font-weight: 700;
    letter-spacing: 1px;
    margin-bottom: 2.5rem;
}

</style>

<div class="sidebar d-flex flex-column">
    <h4 class="text-center mb-4">Admin Panel</h4>
    <nav class="nav flex-column">
        <a class="nav-link" href="/AdminDashboard/Index"><i class="bi bi-house-door me-2"></i>Dashboard</a>
        <a class="nav-link active" href="/AdminDashboard/Profil"><i class="bi bi-person-circle me-2"></i>Profilim</a>
        <a class="nav-link" href="/AdminDashboard/Dersler"><i class="bi bi-journal-bookmark me-2"></i>Dersler</a>
        <a class="nav-link" href="/AdminDashboard/Ogretmenler"><i class="bi bi-people-fill me-2"></i>Öğretmenler</a>
        <a class="nav-link" href="/AdminDashboard/DersProgrami"><i class="bi bi-calendar-event me-2"></i>Ders Programı</a>
        <a class="nav-link" href="/AdminDashboard/Destek"><i class="bi bi-life-preserver me-2"></i>Destek Talebi</a>
    </nav>
</div>

<div class="profile-card card shadow-sm">
    <div class="profile-header">
        Admin Profilim
    </div>
    <div class="card-body text-center">
        <img src="@Model.Foto" alt="Profil Fotoğrafı" class="profile-avatar mb-3" onerror="this.src='https://ui-avatars.com/api/?name=@Model.Ad+@Model.Soyad&background=43cea2&color=fff';" />
        <h5 class="fw-bold mb-1">@Model.Ad @Model.Soyad</h5>
        <p class="text-muted mb-3">@Model.KullaniciAdi</p>
        <dl class="row profile-info text-start justify-content-center">
            <dt class="col-sm-5">E-posta</dt>
            <dd class="col-sm-7">@Model.Eposta</dd>
            <dt class="col-sm-5">Son Giriş</dt>
            <dd class="col-sm-7">@Model.LastLogin</dd>
            <dt class="col-sm-5">IP Adresi</dt>
            <dd class="col-sm-7">@Model.IpAdresi</dd>
        </dl>
    </div>
</div>