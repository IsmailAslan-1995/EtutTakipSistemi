@{
    var toplamDers = ViewBag.ToplamDers ?? 0;
    var toplamOgretmen = ViewBag.ToplamOgretmen ?? 0;
    var toplamToplanti = ViewBag.ToplamToplanti ?? 0;
    var toplamDestek = ViewBag.ToplamDestek ?? 0;
    var admin = ViewBag.Admin as EtutTakipSistemi.Models.AdminTablosu;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    body {
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
    }
    .sidebar {
        min-height: 100vh;
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
        color: #fff;
        padding: 32px 18px 18px 18px;
        width: 220px;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        box-shadow: 2px 0 16px rgba(24,90,157,0.08);
    }
    .sidebar .nav-link {
        color: #fff;
        font-weight: 500;
        margin-bottom: 10px;
        border-radius: 8px;
        transition: background 0.2s, color 0.2s;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
        background: #43cea2;
        color: #185a9d;
    }
    .sidebar h4 {
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 2.5rem;
    }
    .main-content {
        margin-left: 240px;
        padding: 32px 24px;
        min-height: 100vh;
    }
    @@media (max-width: 991px) {
        .sidebar { position: static; width: 100%; min-height: auto; box-shadow: none;}
        .main-content { margin-left: 0; padding: 16px 5px;}
    }
</style>

<div class="sidebar d-flex flex-column">
    <h4 class="text-center mb-4">Admin Panel</h4>
    <nav class="nav flex-column">
        <a class="nav-link active" href="/AdminDashboard/Index"><i class="bi bi-house-door me-2"></i>Dashboard</a>
        <a class="nav-link" href="/AdminDashboard/Profil"><i class="bi bi-person-circle me-2"></i>Profilim</a>
        <a class="nav-link" href="/AdminDashboard/Dersler"><i class="bi bi-journal-bookmark me-2"></i>Dersler</a>
        <a class="nav-link" href="/AdminDashboard/Ogretmenler"><i class="bi bi-people-fill me-2"></i>Öğretmenler</a>
        <a class="nav-link" href="/AdminDashboard/DersProgrami"><i class="bi bi-calendar-event me-2"></i>Ders Programı</a>
        <a class="nav-link" href="/AdminDashboard/Destek"><i class="bi bi-life-preserver me-2"></i>Destek Talebi</a>
    </nav>
</div>

<div class="main-content">
    <h2 class="fw-bold mb-4" style="color:#185a9d;">Hoşgeldiniz, @admin?.KullaniciAdi</h2>
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="background:linear-gradient(135deg,#43cea2 0%,#185a9d 100%);">
                <div class="card-body text-white">
                    <div class="fw-bold mb-2"><i class="bi bi-journal-bookmark me-2"></i>Toplam Ders</div>
                    <div style="font-size:2rem; font-weight:700;">@toplamDers</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="background:linear-gradient(135deg,#185a9d 0%,#43cea2 100%);">
                <div class="card-body text-white">
                    <div class="fw-bold mb-2"><i class="bi bi-people-fill me-2"></i>Toplam Öğretmen</div>
                    <div style="font-size:2rem; font-weight:700;">@toplamOgretmen</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="background:linear-gradient(135deg,#43cea2 0%,#185a9d 100%);">
                <div class="card-body text-white">
                    <div class="fw-bold mb-2"><i class="bi bi-calendar-event me-2"></i>Toplam Canlı Ders</div>
                    <div style="font-size:2rem; font-weight:700;">@toplamToplanti</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="background:linear-gradient(135deg,#185a9d 0%,#43cea2 100%);">
                <div class="card-body text-white">
                    <div class="fw-bold mb-2"><i class="bi bi-life-preserver me-2"></i>Toplam Destek Talebi</div>
                    <div style="font-size:2rem; font-weight:700;">@toplamDestek</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3" style="color:#185a9d;">Tanıtım Videosu</h5>
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.youtube.com/embed/QN16X378OTA" 
                                title="Tanıtım Videosu" 
                                allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>