@model IEnumerable<EtutTakipSistemi.Models.Ticket>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    body {
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
        min-height: 100vh;
    }
    .sidebar {
        min-height: 100vh;
        background: linear-gradient(135deg, #185a9d 0%, #43cea2 100%);
        color: #fff;
        padding: 32px 18px 18px 18px;
        width: 220px;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        box-shadow: 2px 0 16px rgba(24,90,157,0.08);
    }
    .sidebar .nav-link {
        color: #fff;
        font-weight: 500;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
        background: #43cea2;
        color: #185a9d;
    }
    .main-content {
        margin-left: 240px;
        padding: 32px 24px;
        min-height: 100vh;
    }
    .card {
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        border: none;
    }
    .table-hover tbody tr:hover {
        background-color: #f1f7fa;
    }
    .btn-warning, .btn-danger {
        min-width: 80px;
    }
    @@media (max-width: 991px) {
        .sidebar {
            position: static;
            width: 100%;
            min-height: auto;
            box-shadow: none;
        }
        .main-content {
            margin-left: 0;
            padding: 16px 5px;
        }
    }
</style>

<div class="sidebar d-flex flex-column">
    <h4 class="text-center mb-4">Admin Panel</h4>
    <nav class="nav flex-column">
        <a class="nav-link" href="/AdminDashboard/Index"><i class="bi bi-house-door me-2"></i>Dashboard</a>
        <a class="nav-link" href="/AdminDashboard/Profil"><i class="bi bi-person-circle me-2"></i>Profilim</a>
        <a class="nav-link" href="/AdminDashboard/Dersler"><i class="bi bi-journal-bookmark me-2"></i>Dersler</a>
        <a class="nav-link" href="/AdminDashboard/Ogretmenler"><i class="bi bi-people-fill me-2"></i>Öğretmenler</a>
        <a class="nav-link" href="/AdminDashboard/DersProgrami"><i class="bi bi-calendar-event me-2"></i>Ders Programı</a>
        <a class="nav-link active" href="/AdminDashboard/Destek"><i class="bi bi-life-preserver me-2"></i>Destek Talebi</a>
    </nav>
</div>

<div class="main-content">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Destek Talepleri</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Öğrenci ID</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Cevap</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.OgrenciId</td>
                        <td>@t.Konu</td>
                        <td>@t.Mesaj</td>
                        <td>@t.Cevap</td>
                        <td>
                            <form asp-action="SilDestek" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@t.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>