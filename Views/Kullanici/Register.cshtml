@model EtutTakipSistemi.Models.Kullanici

<style>
    body {
        background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
        min-height: 100vh;
        margin: 0;
    }
    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .register-card {
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        width: 100%;
        max-width: 340px;
        position: relative;
        overflow: hidden;
    }
    .register-header {
        background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
        color: #fff;
        text-align: center;
        padding: 1.2rem 0 1rem 0;
        border-radius: 12px 12px 0 0;
        margin: -2.5rem -2.5rem 2rem -2.5rem;
        font-size: 1.5rem;
        font-weight: 600;
        letter-spacing: 1px;
        box-shadow: 0 2px 12px rgba(67, 206, 162, 0.08);
    }
    .register-header .icon {
        font-size: 2.2rem;
        margin-bottom: 0.3rem;
        display: block;
    }
    .form-group label {
        font-weight: 500;
        color: #185a9d;
    }
    .form-control {
        border-radius: 8px;
        border: 1px solid #b2bec3;
        margin-bottom: 0.5rem;
        padding: 0.7rem 1rem;
        font-size: 1rem;
        transition: border-color 0.2s;
        background: #fafdff;
        width: 100%;
        box-sizing: border-box;
    }
    .form-control:focus {
        border-color: #43cea2;
        outline: none;
        box-shadow: 0 0 0 2px #43cea230;
    }
    .btn-primary {
        width: 100%;
        margin-top: 1rem;
        background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.7rem 0;
        transition: background 0.2s;
        box-sizing: border-box;
    }
    .btn-primary:hover {
        background: linear-gradient(90deg, #185a9d 0%, #43cea2 100%);
    }
    .text-danger {
        margin-top: 1rem;
        text-align: center;
        font-weight: 500;
        color: #dc3545;
    }
    .text-center {
        text-align: center;
    }
</style>

<div class="register-container">
